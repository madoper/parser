# SEMANTIC: Example environment configuration
# Copy this file to .env and update values for your environment

# Application
APP_NAME=Web Scraping Parser API
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=parser_db
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TIME_LIMIT=300

# HTTP Client
HTTP_TIMEOUT=30
HTTP_MAX_REDIRECTS=10
HTTP_RETRY_ATTEMPTS=3

# Parsing Settings
MAX_SITEMAP_DEPTH=5
MAX_URLS_PER_SITEMAP=50000
USER_AGENT=WebParser/0.1.0 (https://github.com/madoper/parser)

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Security
SECRET_KEY=changeme-in-production-use-long-random-string-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
